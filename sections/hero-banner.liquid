{%- liquid
  assign hero_height = section.settings.hero_height
  assign hero_layout = section.settings.hero_layout  
  assign text_position = section.settings.hero_text_position
  assign show_overlay = section.settings.show_overlay
  assign overlay_opacity = section.settings.overlay_opacity
-%}

<section class="hero-banner hero-banner--{{ hero_height }} hero-banner--{{ hero_layout }}" 
         data-section-id="{{ section.id }}" 
         data-section-type="hero-banner">
  
  <div class="hero-banner__media">
    {%- if section.settings.hero_image != blank -%}
      <div class="hero-banner__image">
        <img 
          src="{{ section.settings.hero_image | image_url: width: 1920 }}"
          alt="{{ section.settings.hero_image.alt | escape }}"
          width="{{ section.settings.hero_image.width }}"
          height="{{ section.settings.hero_image.height }}"
          loading="eager"
          class="hero-banner__img"
        >
      </div>
    {%- endif -%}
    
    {%- if show_overlay -%}
      <div class="hero-banner__overlay" style="opacity: {{ overlay_opacity | divided_by: 100.0 }};"></div>
    {%- endif -%}
  </div>

  <div class="hero-banner__content hero-banner__content--{{ text_position }}">
    <div class="hero-banner__inner container">
      {%- if section.settings.hero_title != blank -%}
        <h1 class="hero-banner__title">{{ section.settings.hero_title }}</h1>
      {%- endif -%}
      
      {%- if section.settings.hero_subtitle != blank -%}
        <p class="hero-banner__subtitle">{{ section.settings.hero_subtitle }}</p>
      {%- endif -%}
      
      {%- if section.settings.hero_button_text != blank and section.settings.hero_button_link != blank -%}
        <div class="hero-banner__button">
          <a href="{{ section.settings.hero_button_link }}" class="btn btn--primary btn--large">
            {{ section.settings.hero_button_text }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    overflow: hidden;
  }
  
  .hero-banner--screen {
    min-height: 100vh;
    height: 100vh;
  }
  
  .hero-banner--large {
    min-height: 600px;
    height: 600px;
  }
  
  .hero-banner--medium {
    min-height: 500px;
    height: 500px;
  }
  
  .hero-banner--small {
    min-height: 400px;
    height: 400px;
  }
  
  .hero-banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero-banner__image {
    width: 100%;
    height: 100%;
  }
  
  .hero-banner__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 2;
  }
  
  .hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    text-align: center;
    color: white;
  }
  
  .hero-banner__content--left {
    text-align: left;
  }
  
  .hero-banner__content--right {
    text-align: right;
  }
  
  .hero-banner__inner {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .hero-banner__title {
    font-size: 3.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .hero-banner__subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  
  .hero-banner__button {
    margin-top: 2rem;
  }
  
  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 5px;
    transition: all 0.3s ease;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .btn--primary {
    background: #007cba;
    color: white;
  }
  
  .btn--primary:hover {
    background: #005a87;
    transform: translateY(-2px);
  }
  
  .btn--large {
    padding: 1.25rem 2.5rem;
    font-size: 1.1rem;
  }
  
  @media screen and (max-width: 768px) {
    .hero-banner__title {
      font-size: 2.5rem;
    }
    
    .hero-banner__subtitle {
      font-size: 1.1rem;
    }
    
    .hero-banner__inner {
      padding: 1rem;
    }
    
    .hero-banner--screen {
      min-height: 70vh;
      height: 70vh;
    }
  }
  
  @media screen and (max-width: 480px) {
    .hero-banner__title {
      font-size: 2rem;
    }
    
    .btn {
      padding: 0.875rem 1.5rem;
      font-size: 0.9rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_hero",
      "label": "Enable hero section",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    },
    {
      "type": "select",
      "id": "hero_height",
      "label": "Hero height",
      "options": [
        {
          "value": "screen",
          "label": "Full screen"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "small",
          "label": "Small"
        }
      ],
      "default": "screen"
    },
    {
      "type": "select",
      "id": "hero_text_position",
      "label": "Text position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Subtext",
      "default": "Discover amazing products that will change your life"
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}